<div class="accordion-container">
  <h2 class="accordion-day-txt">Thursday, April 14</h2>

  <div class="panel-group" id="accordionThur" role="tablist" aria-multiselectable="true">

  {{#each model as |event| }}
  {{#if event.isThurs}}

    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
          <a role="button"
            data-toggle="collapse"
            data-parent="#accordionThur"
            href="#{{event.id}}"
            aria-expanded="true"
            aria-controls="{{event.id}}">
              <div class="schedule-event-time">
                {{event.time}} <br />
                icons here
              </div><!-- .schedule-event-time -->
              <div class="schedule-event-title" >
                {{event.title}}<br />
                {{event.location}}
              </div><!-- .schedule-event-title-->
          </a>
        </h4>
      </div><!-- .panel-heading -->

      <div id="{{event.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <div class="event-description">
            {{event.description}}
          </div>
          {{#if event.storytellers}}
          <div class="featured-tellers">
            <h3 class="featured-tellers-txt">
              <span class="featured-tellers-emphasis">Featured Storytellers:</span>
            </h3>
            <h3>{{event.storytellers}}</h3>
          </div>
          {{/if}}
          <div>
            {{#link-to 'map' class="tellers-btn"}}Map{{/link-to}}
            {{#link-to 'tellers' class="tellers-btn"}}Tellers{{/link-to}}
          </div>

        </div><!-- .panel-body -->
      </div><!-- .panel-collapse -->
    </div><!-- .panel -->

  {{/if}}
  {{/each}}

  </div><!-- .panel-group -->
</div><!-- .accordion-thur-container -->

