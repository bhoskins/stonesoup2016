<div class="page-header">
  <h1 class="page-heading-txt">Schedule</h1>
</div>

<hr class="page-heading-line" />

<!-- Bootstrap accordion rules
  .panel-title a['href':'#?'] = panel-collapse #?
  .panel-collapse class "in" = panel open
  -->

